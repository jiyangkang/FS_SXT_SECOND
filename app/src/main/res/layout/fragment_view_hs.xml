<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">

        <views.DrawViewNode

            android:id="@+id/node_ammeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:project="smartHS"
            android:layout_margin="10dp"/>
        <views.DrawViewNode

            android:id="@+id/node_temp_hs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:project="smartHS"
            android:layout_margin="10dp"/>
        <views.DrawViewNode

            android:id="@+id/node_keeper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:project="smartHS"
            android:layout_margin="10dp"/>

        <views.DrawViewNode

            android:id="@+id/node_light_hs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:project="smartHS"
            android:layout_margin="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">
        <views.DrawViewNode

            android:id="@+id/node_raster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:project="smartHS"
            android:layout_margin="10dp"/>
        <views.DrawViewNode

            android:id="@+id/node_gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:project="smartHS"
            android:layout_margin="10dp"/>

        <views.DrawViewNode

            android:id="@+id/node_fog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:project="smartHS"
            android:layout_margin="10dp"/>

        <views.DrawViewNode

            android:id="@+id/node_infrared_hs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:project="smartHS"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </LinearLayout>

</LinearLayout>
